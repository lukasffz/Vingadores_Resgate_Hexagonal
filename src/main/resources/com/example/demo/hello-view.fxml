<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <children>
        <VBox fx:id="rootVBox" alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="VINGADORES: RESGATE HEXAGONAL" textFill="WHITE">
                    <font><Font name="Impact" size="48.0" /></font>
                    <VBox.margin><Insets top="50.0" /></VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button fx:id="homemFerroButton" mnemonicParsing="false" onAction="#onEscolherHomemFerro" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e74c3c;" text="Homem de Ferro" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Button>
                        <Button fx:id="capitaoAmericaButton" mnemonicParsing="false" onAction="#onEscolherCapitaoAmerica" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #2980b9;" text="Capitão América" textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Button>
                    </children>
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
                </HBox>
                <Separator prefWidth="200.0">
                    <VBox.margin><Insets bottom="10.0" left="200.0" right="200.0" top="10.0" /></VBox.margin>
                </Separator>
                <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="10.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 20;" VBox.vgrow="ALWAYS">
                    <VBox.margin><Insets left="440.0" right="440.0" /></VBox.margin>
                    <children>
                        <Label text="OPÇÕES" textFill="WHITE"><font><Font name="System Bold" size="20.0" /></font></Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="150.0" text="Resolução:" textFill="WHITE" />
                                <ComboBox fx:id="resolucaoComboBox" prefWidth="150.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="150.0" text="Volume:" textFill="WHITE" />
                                <Slider fx:id="volumeSlider" prefWidth="150.0" />
                            </children>
                        </HBox>
                        <Label text="Dificuldade:" textFill="WHITE" />
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <RadioButton mnemonicParsing="false" text="Fácil" textFill="WHITE"><toggleGroup><ToggleGroup fx:id="dificuldadeToggleGroup" /></toggleGroup></RadioButton>
                                <RadioButton mnemonicParsing="false" text="Médio" textFill="WHITE" toggleGroup="$dificuldadeToggleGroup" />
                                <RadioButton mnemonicParsing="false" text="Difícil" textFill="WHITE" toggleGroup="$dificuldadeToggleGroup" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefWidth="250.0" spacing="10.0">
                    <children>
                        <Button onAction="#onIniciarJogoClick" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #2ecc71;" text="INICIAR JOGO" textFill="WHITE"><font><Font name="System Bold" size="18.0" /></font></Button>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button onAction="#onSalvarProgressoClick" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #34495e;" text="Salvar" textFill="WHITE" />
                                <Button onAction="#onCarregarProgressoClick" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #34495e;" text="Carregar" textFill="WHITE" />
                            </children>
                        </HBox>
                        <Button onAction="#onSairClick" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #c0392b;" text="SAIR" textFill="WHITE"><font><Font name="System Bold" size="18.0" /></font></Button>
                    </children>
                    <VBox.margin><Insets top="10.0" /></VBox.margin>
                </VBox>
                <Label fx:id="statusLabel" alignment="CENTER" prefWidth="500.0" text="Selecione um personagem e Inicie!" textFill="#dddddd">
                    <VBox.margin><Insets top="10.0" /></VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>